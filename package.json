{
  "name": "zelt-template",
  "version": "1.0.0",
  "description": "A project template for the ZeltTemplate stack",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "init": "node ./dist/cli/index.cjs init -y",
    "start": "run-s build serve",
    "serve": "run-p serve:api watch",
    "serve:api": "nodemon dist/server/index.js --ignore data --ignore debug",
    "watch": "run-p watch:tsc watch:rollup",
    "watch:rollup": "rollup -c --watch",
    "watch:tsc": "tsc --watch",
    "build": "run-s build:tsc build:rollup",
    "build:rollup": "rollup -c",
    "build:tsc": "tsc",
    "lint": "prettier src --check && eslint src",
    "fix": "prettier src --write && eslint src --fix",
    "build:cli": "rollup -c rollup.cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/megazear7/zelt-template.git"
  },
  "keywords": [
    "Zod",
    "Express",
    "Lit",
    "TypeScript",
    "Project",
    "Template"
  ],
  "author": "Alex Lockhart",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/megazear7/zelt-template/issues"
  },
  "homepage": "https://github.com/megazear7/zelt-template#readme",
  "dependencies": {
    "@lit/context": "^1.1.6",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "lit": "^3.3.1",
    "multer": "^2.0.2",
    "openai": "^6.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/express": "^5.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.2",
    "eslint": "^9.39.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rollup": "^4.52.5",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
